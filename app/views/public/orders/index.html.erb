<div class="d-inline ml-5"></div><h6 class="alert-secondary d-inline-block ml-5 px-3 mb-4 mt-4 font-weight-bold">注文履歴一覧</h6>

<table class="table table-bordered mx-auto" style="width: 90%">
  <thead class="table-secondary">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |orders| %>
    <tr>
      <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= orders.address_number %><br>
        <%= orders.address %><br>
        <%= orders.address_name %>
      </td>
      <td>
        <% orders.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
      </td>
      <td><%= orders.payment %></td>
      <td><%= orders.status_i18n %></td>
      <td><%= link_to "表示する",class:'btn btn-sm btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

