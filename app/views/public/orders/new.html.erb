<h3>注文情報入力</h3>

<%= form_with model: @order, url:orders_check_path, local:true do |f| %>

<h3>支払方法</h3>

  <%= f.radio_button :pay_style, Order.pay_styles.key(0) %>
  <%= f.label :pay_style_credit_card, Order.pay_styles_i18n[:credit_card] %>

  <%= f.radio_button :pay_style, Order.pay_styles.key(1) %>
  <%= f.label :pay_style_transfer, Order.pay_styles_i18n[:transfer]%>
  
<h3>お届け先</h3>

  <%= f.radio_button :select_address, 0 %>
  <%= f.label :select_address, "ご自身の住所" %>
  <p>&emsp;<%= @orders.address_number %><%= @orders.address %></p>
  <p>&emsp;<%= @orders.last_name %><%= @orders.first_name %></p>
  
  <%= f.radio_button :select_address, 1 %>
  <%= f.label :select_address, "登録住所から選択" %>
  <%= f.select :address_id, options_from_collection_for_select(Delivery.all, :id, :address_display) %>
  
  <%= f.radio_button :select_address, 2 %>
  <%= f.label :select_address, "新しいお届け先" %>
  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :address_number, autofocus: true, autocomplete: "address_number" %>
  </div>
  
  <div class="field">
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    <%= f.label :"住所" %><br />
  </div>
  
  <div class="field">
    <%= f.label :"宛名" %><br />
    <%= f.text_field :address_name, autofocus: true, autocomplete: "address_name" %>
  </div>
  
  <div class="form-group">
    <%= f.submit '確認画面へ進む' %>
  </div>

  <% end %>

