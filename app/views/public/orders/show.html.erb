<div class="d-inline ml-5"></div><h6 class="alert-secondary d-inline-block ml-5 px-3 mb-4 mt-4 font-weight-bold">注文履歴詳細</h6>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h6 class="font-weight-bold">注文情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>
            〒<%= @order.address_number %><br>
            <%= @order.address %><br>
            <%= @order.address_name %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">支払い方法</th>
          <td><%= @order.pay_style_i18n %></td>
        </tr>
        <tr>
          <th class="table-secondary">ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <h6 class="font-weight-bold">請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @order.payment - @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%= @order.payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h6 class="font-weight-bold">注文内容</h6>
      <table class="table table-bordered">
        <thead class="table-secondary">
          <th>商品</th>
          <th>単価（税込み）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <tr>
          <% @order_items.each do |order_item| %>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.tax_free %></td>
            <td><%= order_item.count %></td>
            <td><%= order_item.item.tax_free * order_item.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  






