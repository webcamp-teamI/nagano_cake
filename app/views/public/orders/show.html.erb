<h4>注文履歴詳細</h4>
  <table>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
            <%= @order.address_number %>
            <%= @order.address %>
            <%= @order.address_name %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.pay_style_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status_i18n %></td>
      </tr>
  </table>

<h4>請求情報</h4>
  <table>
      <tr>
        <th>商品合計</th>
        <td><%= @order.payment - @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.payment %></td>
      </tr>
  </table>

<h4>注文内容</h4>

  <table>
    <thead>
      <th>商品</th>
      <th>単価（税込み）</th>
      <th>個数</th>
      <th>小計</th>
    </thead>
    <tbody>
      <tr>
        <% @order_items.each do |order_item| %>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.item.tax_free %></td>
        <td><%= order_item.count %></td>
        <td><%= order_item.item.tax_free * order_item.count %></td>
      </tr>
        <% end %>
    </tbody>
  </table>


