<h2>配送先編集</h2>

<%= form_with model: Delivery, url:  delivery_path(@deliverie.id), method: :patch do |f| %>
<%= f.hidden_field :customer_id, :value => current_customer.id %>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :address_number, autofocus: true, autocomplete: "address_number" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :"宛名" %><br />
    <%= f.text_field :address_name, autofocus: true, autocomplete: "address_name" %>
  </div>

  <div class="form-group">
    <%= f.submit '変更内容を保存' %>
  </div>
  
<% end %>