<h2>配送先登録/一覧</h2>

<%= form_with model: Delivery, url: deliveries_path, local:true do |f| %>

<%= f.hidden_field :customer_id, :value => current_customer.id %>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :address_number, autofocus: true, autocomplete: "address_number" %>
  </div>
  
  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :"宛名" %><br />
    <%= f.text_field :address_name, autofocus: true, autocomplete: "address_name" %>
  </div>
  
  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
  
  <% end %>
  
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>  
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @deliverie.each do |delivery| %>
        <td><%= delivery.address_number %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.address_name %></td>
        <td><%= link_to '編集する', edit_delivery_path(delivery.id) %></td>
        <td><%= link_to '削除する', delivery_path(delivery.id), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>