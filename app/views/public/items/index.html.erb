<!--<h1>Public::Items#index</h1>-->
<div class="container">
  <div class="my-4">
    <h3>商品一覧 (全<%= @items.count %>件) </h3>
  </div>

  <div class="d-flex flex-wrap"> <!--displayのd-->
    <% @items.each do |item| %>
      <div class="w-25"> <!--widthのw-->
        <div>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_item_image(200,150) %><br>
          <% end %>
        </div>
        <div>
          商品名
          <%= item.name %>
        </div>
        <div>
          金額
          ￥<%= (item.tax_free * 1.1).floor.to_s(:delimited) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<nav aria-label="Page navigation">
<div class="pagination justify-content-center">
  <%= paginate @items %>
</div>
</nav>



