<!--<h1>Public::Items#show</h1>-->
<div class="container-fluid">
  <div class="row justify-content-center">

    <div class="col-md-3 mt-4 d-block">
    <%= image_tag @item.get_item_image(250,200) %>
　  </div>

    <div class="col-md-3 mt-4">
      <div class="d-block"><%= @item.name %></div>
      <div class="d-block"><%= @item.detail %></div>
      <div class="d-block">￥<%= (@item.tax_free * 1.1).floor.to_s(:delimited) %>(税込)</div>
      <%= form_with model: @Cart, url: carts_path, local: :true do |f| %>

      <div class="form-group row col-lg-8">
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :item_id, :value => @item.id %>
      </div>
      <div class="font-weight-bold d-inline-block ml-1 mr-1 mt-3">
        <%= f.select :count, [[1], [2], [3], [4], [5]], include_blank: "個数選択", class:"btn btn-outline-secondary" %>
      </div>
      <div class="font-weight-bold d-inline-block ml-1 mr-1 mt-3">
        <%= f.submit "カートに追加する", class:"btn btn-sm px-3 ml-3", style:"background-color: #F3F1EA" %>
      </div>
      <% end %>
    </div>
  </div>
</div>