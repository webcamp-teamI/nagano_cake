 <body>
  <h5 class="d-inline-block font-weight-bold mt-4 mb-5 ml-5 px-3" style="background-color: ghostwhite">商品編集</h5>
   <div class="container-fluid w-50 mx-auto">
   <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
   <div class="form-group row">
    <label class="col-sm-2 col-form-label">商品画像</label>
       <div class="col-sm-10">
      <%= f.file_field :image, accept: "image/*", class: "custom-file-input" %>
        <label class="custom-file-label" data-browse="参照">ファイル選択...</label>
      </div>
     </div>

   <div class="form-group row">
        <label class="col-sm-2 col-form-label">商品名</label>
       <div class="col-lg-4">
        <%= f.text_field :name, class: "form-control"%>
       </div>
    </div>

    <div class="form-group row">
       <label class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-lg-4">
     <%= f.text_area :detail, class: "form-control" %>
   </div>
  </div>

   <div class="form-group row">
     <label class="col-sm-2 col-form-label">ジャンル</label>
      <div class="col-lg-4">
      　<%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name), {}, {class: "form-control"} %>
   </div>
  </div>

   <div class="form-group row">
     <label class="col-sm-2 col-form-label">税抜価格</label>
      <div class="col-lg-4">
       <%= f.text_field :tax_free, class: "form-control d-inline" %>
      </div>
      <div class="d-inline mt-2">円</div>
     </div>

   <div class="form-group row">
      <label class="col-sm-3 col-form-label">販売ステータス</label>
     <div class="col-lg-4">
      <%= f.radio_button :is_active, "true", class: "checkbox" %>
      <%= f.label :is_active, "販売中", class: "radio" %>
      <%= f.radio_button :is_active, "false", class: "checkbox" %>
      <%= f.label :is_active, "販売停止中", class: "radio" %>
     </div>
   </div>

   <div class="actions">
     <%= f.submit '変更を保存', class:'btn btn-sm px-4 w-25', style:"background-color: #F3F1EA"  %>
   </div>
   <% end %>
  </div>
 </body>
