   <!--ジャンル新規追加-->
      <h2 class="mt-3">ジャンル一覧・追加</h2>
   <%= form_with model: Genre, url:admin_genres_path, local:true do |f| %>

   <div class="form-group">
    <h5>ジャンル名</h5>
     <%= f.text_field :genre_name %>
   </div>

   <div class="form-group">
     <%= f.submit '新規登録' %>
   </div>

   <% end %>

   <!--一覧表示-->
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
     </tr>
  </thead>
   <tbody>
    <tr>
     <% @genres.each do |genre| %>
     <td><%= genre.genre_name %></td>
     <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>
   <% end %>
   </tbody>
  </table>