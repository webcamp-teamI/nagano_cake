<h6 class="d-inline-block font-weight-bold mb-5 ml-5 px-3 mt-4" style="background-color: ghostwhite">管理者ログイン</h6>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-center">
    <%= f.label :"メールアドレス" %>
    <div class="d-inline mx-3"></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'w-25 ' %>
  </div>

  <div class="field text-center">
    <%= f.label :"パスワード" %>
    <div class="d-inline mr-3 ml-5"></div>
    <%= f.password_field :password, autocomplete: "current-password", class:'w-25' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-center mt-3">
    <%= f.submit "ログイン", class:'btn btn-sm px-4', style:"background-color: #F3F1EA" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
